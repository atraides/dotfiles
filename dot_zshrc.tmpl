sapssh() {
  local HOSTNAME=${1}
  if [[ ${HOSTNAME:l} =~ "hec" ]]; then
    ssh ${1}.$(dc-finder.sh ${1}).hec.sap.biz
  else
    ssh ${1}
  fi
}

